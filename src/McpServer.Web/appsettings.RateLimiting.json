{
  "McpServer": {
    "RateLimiting": {
      "GlobalLimit": 1000,
      "GlobalWindowDuration": "00:01:00",
      "UseSlidingWindow": true,
      "ResourceLimits": {
        "tools/call": {
          "Limit": 100,
          "WindowDuration": "00:01:00",
          "BurstLimit": 150,
          "ExceededMessage": "Too many tool calls. Please wait before trying again."
        },
        "resources/read": {
          "Limit": 200,
          "WindowDuration": "00:01:00"
        },
        "resources": {
          "Limit": 500,
          "WindowDuration": "00:01:00"
        },
        "completion": {
          "Limit": 50,
          "WindowDuration": "00:01:00",
          "ExceededMessage": "Completion rate limit exceeded. This is a resource-intensive operation."
        },
        "control": {
          "Limit": 1000,
          "WindowDuration": "00:01:00"
        }
      },
      "OperationCosts": {
        "tools/call": 2,
        "completion/complete": 5,
        "resources/subscribe": 3
      },
      "IdentifierAllowlist": [
        "internal-service",
        "monitoring-agent"
      ]
    }
  }
}