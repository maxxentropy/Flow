{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "McpServer": {
    "Name": "MCP Server Web",
    "Version": "1.0.0",
    "Transport": {
      "Stdio": {
        "Enabled": false
      },
      "Sse": {
        "Enabled": true,
        "Port": 8080,
        "Path": "/sse",
        "AllowedOrigins": ["http://localhost:3000", "https://localhost:3000"],
        "RequireHttps": false,
        "ConnectionTimeout": "00:30:00",
        "ApiKey": null
      }
    },
    "Tools": {
      "MaxConcurrentExecutions": 10,
      "DefaultTimeout": "00:02:00"
    },
    "Resources": {
      "FileSystem": {
        "AllowedPaths": ["./public"],
        "RecursiveSearch": true,
        "ExcludePatterns": [".git", "node_modules", "bin", "obj", ".vs", ".idea"],
        "IncludeExtensions": [".txt", ".json", ".xml", ".md", ".yml", ".yaml", ".html", ".css", ".js"]
      }
    },
    "Authentication": {
      "Enabled": true,
      "DefaultScheme": "ApiKey",
      "AllowAnonymous": true
    },
    "JwtAuthentication": {
      "Issuer": "McpServer",
      "Audience": "McpServer",
      "SigningKey": "ThisIsASecretKeyForDevelopmentOnlyPleaseChangeInProduction123456789",
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ClockSkew": "00:05:00"
    },
    "ApiKeyAuthentication": {
      "ValidApiKeys": ["dev-api-key-123"],
      "RequireApiKey": false
    },
    "Sessions": {
      "Timeout": "01:00:00",
      "CleanupInterval": "00:10:00"
    },
    "SessionCleanup": {
      "Enabled": true,
      "Interval": "00:05:00"
    }
  }
}