{
  "info": {
    "_postman_id": "mcp-server-collection",
    "name": "MCP Server Collection",
    "description": "Collection for testing the Model Context Protocol (MCP) Server implementation. This collection tests the Server-Sent Events (SSE) transport with JSON-RPC 2.0 protocol.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "SSE Connection",
      "item": [
        {
          "name": "Initialize Connection",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "text/event-stream"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 1,\n  \"method\": \"initialize\",\n  \"params\": {\n    \"protocolVersion\": \"0.1.0\",\n    \"capabilities\": {},\n    \"clientInfo\": {\n      \"name\": \"Postman MCP Client\",\n      \"version\": \"1.0.0\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sse",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "sse"
              ]
            },
            "description": "Initializes the MCP server connection. This must be the first request sent to establish the session."
          }
        },
        {
          "name": "Send Initialized Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"method\": \"notifications/initialized\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sse",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "sse"
              ]
            },
            "description": "Sends the initialized notification to complete the handshake."
          }
        }
      ]
    },
